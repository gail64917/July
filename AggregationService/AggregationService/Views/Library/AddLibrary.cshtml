@model AggregationService.Models.LibraryService.Library

@{
    ViewData["Title"] = "AddLibrary";
}

<h2>AddLibrary</h2>

<h4>Library</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddLibrary">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LibraryName" class="control-label"></label>
                <input asp-for="LibraryName" class="form-control" />
                <span asp-validation-for="LibraryName" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="CountBooksPerLibrary" class="control-label"></label>
                <input asp-for="CountBooksPerLibrary" class="form-control" />
                <span asp-validation-for="CountBooksPerLibrary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}